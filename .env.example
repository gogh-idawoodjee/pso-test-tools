APP_NAME="PSO Test Tools"
APP_ENV=local
APP_KEY=base64:YourAppKeyHere
APP_DEBUG=true
APP_URL=http://pso-test-tools.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ─── Primary App Database ─────────────────────────────
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# ─── Shared Sanctum Token DB ─────────────────────────
SHARED_DB_DRIVER=sqlite # Use mysql, pgsql, or sqlite
SHARED_DB_HOST=127.0.0.1
SHARED_DB_PORT=3306
SHARED_DB_DATABASE=path/to/shared.sqlite
SHARED_DB_USERNAME=root
SHARED_DB_PASSWORD=

# ─── Session / Queue / Cache ─────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_DRIVER=file
CACHE_STORE=database
# CACHE_PREFIX=

QUEUE_CONNECTION=database

# ─── Broadcast / Filesystem ───────────────────────────
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public

# ─── Redis / Memcached ───────────────────────────────
MEMCACHED_HOST=127.0.0.1
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ─── Mail ─────────────────────────────────────────────
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ─── AWS (optional) ───────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=true

# ─── Vite / Torchlight ────────────────────────────────
VITE_APP_NAME="${APP_NAME}"
TORCHLIGHT_TOKEN=

# ─── External Services / Secrets ──────────────────────
GOOGLE_MAPS_GEOCODING_API_KEY=
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
MAIN_PASSWORD=

# ─── Custom App Config ────────────────────────────────
PSO_SERVICES_API=https://pso-services.test
PSO_SERVICES_API_VERSION=2
HASIDS_SALT=

# ─── R2 Cloudflare Storage ────────────────────────────
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_REGION=auto
R2_BUCKET=pso-test-tools
R2_URL=https://your-r2-endpoint.example.com
LIVEWIRE_TEMPORARY_UPLOAD_DISK=r2
